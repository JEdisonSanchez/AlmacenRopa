@model IEnumerable<AlmacenRopa.Models.PRODUCT>

@{
    ViewBag.Title = "Lista de productos";
}

<h4>Lista de productos</h4>

<p>
    <a href="@Url.Action("Create","Product")"><i class="material-icons left">add_circle</i>Crear</a>


    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            Foto
        </th>
        <th>
            Codigo del Producto
        </th>

        <th>
            Nombre del Producto
        </th>
        <th>
            Cantidad en Stock
        </th>
        <th>
            Precio Unidad
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @*@Html.DisplayFor(modelItem => item.PHOTO)*@
        <img width="80" height="80" src="@Url.Action("getImage", "Product", new { id = item.CODE_PRODUCT })" />
        @Html.ValidationMessageFor(modelItem => item.PHOTO, "", new { @class = "text-danger" })
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CODE_PRODUCT)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NAME_PRODUCT)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.STOCK)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PRICE_PRODUCT)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID_PRODUCT }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID_PRODUCT }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID_PRODUCT })
    </td>
</tr>
}

</table>
